package com.ys.businesscard.dao;

import java.sql.*;

import com.ys.businesscard.dto.CardDto;

public class CardDao {
	CardDto temp = null;
	static String url = "";
	static String id = "root";
	static String password = "1234";
	
	public void addCard(String name, String phone, String company) {
		Connection con = null;
		PreparedStatement ps = null;
		try {
			Class.forName("");
			con = DriverManager.getConnection(url, id , password);
			String sql = "insert into card values (name, phone, company)";
			ps = con.prepareStatement(sql);
			ps.executeUpdate();
		}
		catch(Exception e) {
			e.printStackTrace();
		}
		finally {
			if(ps!=null) {
				try {
					ps.close();
				} catch (SQLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			if(con!=null) {
				try {
					con.close();
				} catch (SQLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}
	}
	
	public CardDto searchCard(String name) {
		Connection con = null;
		PreparedStatement ps = null;
		ResultSet rs = null;
		try {
			Class.forName("");
			con = DriverManager.getConnection(url, id , password);
			String sql = "select * from card where name = ?";
			ps = con.prepareStatement(sql);
			ps.setString(1, name);
			rs = ps.executeQuery();
			while(rs.next()) {
				String name2 = rs.getString(1);
				String phoneNumber = rs.getString(1);
				String company = rs.getString(1);
				temp = new CardDto(name2, phoneNumber, company)
			}
		}
		catch(Exception e) {
			e.printStackTrace();
		}
		finally {
			if(ps!=null) {
				try {
					ps.close();
				} catch (SQLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			if(con!=null) {
				try {
					con.close();
				} catch (SQLException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}
	}
}
